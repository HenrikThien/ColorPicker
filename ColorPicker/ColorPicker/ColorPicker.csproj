<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <Version>0.1.0</Version>
    <Description>Color picker for xamarin forms.</Description>
    <Authors>Victor Papenko</Authors>
    <PackageProjectUrl>https://github.com/vpapenko/ColorPicker</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReleaseNotes></PackageReleaseNotes>
    <RepositoryUrl>https://github.com/vpapenko/ColorPicker</RepositoryUrl>
    <PackageTags>ColorPicker xamarin forms dotnet netstandard csharp c-sharp</PackageTags>
    <PackageId>ColorPicker.Forms</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="SkiaSharp.Views.Forms" Version="1.68.1" />
    <PackageReference Include="Xamarin.Forms" Version="4.3.0.991211" />
    <PackageReference Include="Xamarin.Essentials" Version="1.3.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="BasicControls\ColorWheel.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>